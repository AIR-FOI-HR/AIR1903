<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/layoutManageProductsInputName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginInputForms"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="@dimen/marginInputForms"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="@string/inputHintName"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/layoutManageProductsInputValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginInputForms"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/marginInputForms"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="@string/inputHintNumber"
        android:importantForAutofill="no"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutManageProductsInputName" />

    <EditText
        android:id="@+id/layoutManageProductsInputDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="@string/inputHintDescription"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutManageProductsInputValue" />

    <ImageView
        android:id="@+id/layoutManageProductsImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/imageProduct"
        app:layout_constraintBottom_toTopOf="@+id/layoutManageProductsButtonSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutManageProductsInputDescription"
        tools:srcCompat="@tools:sample/backgrounds/scenic[17]" />

    <Button
        android:id="@+id/layoutManageProductsButtonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:text="@string/buttonAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/layoutManageProductsImageOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.7"
        android:contentDescription="@string/imageOverlay"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/layoutManageProductsImage"
        app:layout_constraintEnd_toEndOf="@+id/layoutManageProductsImage"
        app:layout_constraintStart_toStartOf="@+id/layoutManageProductsImage"
        app:layout_constraintTop_toTopOf="@+id/layoutManageProductsImage"
        app:srcCompat="@android:color/black" />

    <ImageButton
        android:id="@+id/layoutManageProductsButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/buttonDelete"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/layoutManageProductsImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layoutManageProductsButtonEdit"
        app:layout_constraintTop_toBottomOf="@+id/layoutManageProductsInputDescription"
        app:srcCompat="@drawable/icon_delete" />

    <ImageButton
        android:id="@+id/layoutManageProductsButtonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/buttonEdit"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/layoutManageProductsImage"
        app:layout_constraintEnd_toStartOf="@+id/layoutManageProductsButtonDelete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutManageProductsInputDescription"
        app:srcCompat="@drawable/icon_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>