<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_delete_confirmation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginHorizontal="50dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/popup_delete_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="Are you sure?"
        android:textColor="@color/cardview_light_background"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_popup_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:background="@color/colorFoi"
            android:text="Yes" />

        <Button
            android:id="@+id/button_popup_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@color/colorFoiAlternate"
            android:text="No" />
    </LinearLayout>
</LinearLayout>