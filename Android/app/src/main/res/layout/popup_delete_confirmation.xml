<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_delete_confirmation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_popup_rounded"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginHorizontal="50dp"
    android:weightSum="2"
    >

    <TextView
        android:id="@+id/popup_delete_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="Are you sure?"
        android:textColor="@color/colorFoi"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_popup_yes"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/img_delete_product_accept" />

        <Button
            android:id="@+id/button_popup_no"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_delete_product_reject" />
    </LinearLayout>
</LinearLayout>